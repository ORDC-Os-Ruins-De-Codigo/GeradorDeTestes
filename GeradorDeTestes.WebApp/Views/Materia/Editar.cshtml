@using GeradorDeTestes.Dominio.ModuloDisciplina
@using GeradorDeTestes.WebApp.Extensions

@model EditarMateriaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Matéria";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Editar" asp-route-id="@Model.Id">
                    <h3>Formulário de Edição</h3>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Nome" class="control-label fs-5">Nome:</label>
                        <input asp-for="Nome" class="form-control" placeholder="Informe o nome da matéria" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Disciplina" class="control-label fs-5">Disciplina:</label>
                        <select asp-for="Disciplina" id="inputDisciplina" class="form-select"></select>
                        <span asp-validation-for="Disciplina" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Serie" class="control-label fs-5">Serie:</label>
                        <select asp-for="Serie" id="inputSerie" asp-items="@Html.GetEnumSelectList<Serie>()" class="form-select"></select>
                        <span asp-validation-for="Serie" class="text-danger"></span>
                    </div>

                    @*                     <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="ContatoId" class="control-label fs-5">Contato:</label>
                        <select asp-for="ContatoId" asp-items="@Model.ContatosDisponiveis" class="form-select">
                            <option value="">Nenhum contato selecionado</option>
                        </select>
                        <span asp-validation-for="ContatoId" class="text-danger"></span>
                    </div> *@

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/materias">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}